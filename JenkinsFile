pipeline{
        agent any
        environment {

            app_version = 'v1'
            rollback = 'false'
        }
        stages{
            stage('Build Image'){
                steps{
                    script{
                        if (env.rollback == 'false'){
                            image = docker.build("hgwright/chaperoo-frontend")
                        }
                    }
                }
            }
            stage('Tag & Push Image'){
                steps{
                    script{
                        if (env.rollback == 'false'){
                            docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials'){
                                image.push("${env.app_version}")
                            }
                        }
                    }
                }
            }
            stage('Test Application'){
                steps{
                    cd /home/henry/QA-Practical-Project-4/number_api && sh pytest
                    cd /home/henry/QA-Practical-Project-4/word_api && sh pytest
                    cd /home/henry/QA-Practical-Project-4/prompt_api && sh pytest
                    cd /home/henry/QA-Practical-Project-4/server && sh pytest

                }
            }




            stage('Deploy App'){
                steps{
                    sh ""
                }
            }
        }
}